<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fx:id="componentWrapper" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@../workspace/styles/Generic%20Style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.scenes.login.LoginController">
   <content>
      <AnchorPane id="root-container">
         <children>
            <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <Label alignment="CENTER" text="Welcome to Shticell app!" wrapText="true" />
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="Username: " wrapText="true" />
                        <TextField fx:id="usernameTextField" />
                        <ProgressIndicator fx:id="progressIndicator" disable="true" maxHeight="20.0" maxWidth="20.0" visible="false" />
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#loginButtonClicked" text="Login" />
                  <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
                     <children>
                        <ScrollPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                           <content>
                              <Label fx:id="errorLabel" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" wrapText="true" />
                           </content>
                        </ScrollPane>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
   </content>
</ScrollPane>
